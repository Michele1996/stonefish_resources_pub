<launch>
    <!-- Configurable arguments -->
    <arg name="robot_name" default="bluerov"/>
    
    <!-- Namespace with robot name -->
    <group ns="$(arg robot_name)">
        <!-- Run Simulator -->
        <include file="$(find stonefish_ros)/launch/python_simulator_launcher.launch">
            <arg name="simulation_data" value="$(find stonefish_resources)/data/"/>
            <arg name="scenario_description" value="$(find stonefish_resources)/scenarios/bluerov_tank.scn"/>
            <arg name="simulation_rate" value="300.0"/>
            <arg name="graphics_resolution" value="1200 800"/>
            <arg name="graphics_quality" value="high"/>
        </include>
    </group>
</launch>
